@model BookStore.Models.BookModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImagePath ?? "/images/default-book.jpg"" class="img-fluid" alt="@Model.Title">
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p class="text-success fw-bold">$@Model.Price</p>
            <p>@Model.Description</p>
            
            <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success mb-3">
                <i class="fas fa-cart-plus"></i> Add to Cart
            </a>

            <h4>Chapters</h4>
            <ul class="list-group">
                @foreach (var chapter in Model.Chapters)
                {
                    <li class="list-group-item">
                        <strong>@chapter.Title</strong>
                        <p>@chapter.Content</p>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

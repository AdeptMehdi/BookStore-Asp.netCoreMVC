@model List<BookStore.Models.OrderModel>

<h2>My Orders</h2>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Date</th>
        <th>Total Price</th>
        <th>Status</th>
        <th>Details</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
            <td>$@order.TotalPrice</td>
            <td>@order.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
            </td>
        </tr>
    }
    </tbody>
</table>
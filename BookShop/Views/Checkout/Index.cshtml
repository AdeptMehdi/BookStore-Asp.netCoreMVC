@model List<BookStore.Models.CartItemModel>
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

<form asp-action="PlaceOrder" method="post">
    <div class="mb-3">
        <label>Name</label>
        <input type="text" name="name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Email</label>
        <input type="email" name="email" class="form-control" required />
    </div>
    <div class="mb-3">
        <label>Address</label>
        <textarea name="address" class="form-control" required></textarea>
    </div>

    <h4>Order Summary</h4>
    <ul class="list-group mb-3">
        @foreach (var item in Model)
        {
            <li class="list-group-item d-flex justify-content-between">
                <span>@item.Book.Title (x@item.Quantity)</span>
                <strong>$@(item.Book.Price * item.Quantity)</strong>
            </li>
        }
    </ul>
    <div class="mb-3 text-end">
        <strong>Total: $@Model.Sum(c => c.Book.Price * c.Quantity)</strong>
    </div>

    <button type="submit" class="btn btn-success w-100">Pay with Card</button>
</form>
@model IEnumerable<BookStore.Models.BookModel>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var book in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@book.ImagePath ?? "/images/default-book.png"" class="card-img-top" alt="@book.Title">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text text-truncate">@book.Description</p>
                        <p class="mb-1"><strong>Author:</strong> @book.Author</p>
                        <p class="mb-2 text-success fw-bold">$@book.Price</p>
                        <div class="mt-auto">
                            <a asp-controller="Book" asp-action="Details" asp-route-id="@book.Id" class="btn btn-primary w-100 mb-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-controller="Cart" asp-action="Add" asp-route-id="@book.Id" class="btn btn-success w-100">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@model BookStore.Models.Book
@{
    ViewData["Title"] = "حذف کتاب";
}

<div class="container my-4">
    <div class="card border-0 shadow-sm p-4">
        <h2 class="fw-bold text-danger mb-3">
            <i class="fa-solid fa-trash me-2"></i> حذف کتاب
        </h2>
        <p class="text-muted">آیا مطمئن هستید که می‌خواهید این کتاب را حذف کنید؟ این عملیات غیرقابل بازگشت است.</p>

        <div class="row g-4 align-items-center">
            <!-- تصویر کتاب -->
            <div class="col-md-4">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-height: 300px; object-fit: cover;" />
            </div>

            <!-- جزئیات کتاب -->
            <div class="col-md-8">
                <ul class="list-unstyled mb-4">
                    <li class="mb-2"><strong>عنوان:</strong> @Model.Title</li>
                    <li class="mb-2"><strong>نویسنده:</strong> @Model.Author</li>
                    <li class="mb-2"><strong>ISBN:</strong> @Model.ISBN</li>
                    <li class="mb-2"><strong>قیمت:</strong> @Model.Price.ToString("N0") تومان</li>
                    <li class="mb-2"><strong>دسته‌بندی:</strong> @Model.Category?.Name</li>
                </ul>

                <form asp-action="Delete" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash me-1"></i> حذف
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa fa-arrow-left me-1"></i> بازگشت
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
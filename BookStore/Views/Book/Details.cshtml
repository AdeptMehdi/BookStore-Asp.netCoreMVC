@model BookStore.Models.Book

@{
    ViewData["Title"] = "جزئیات کتاب";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow-sm" alt="@Model.Title" />
        </div>
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>نویسنده:</strong> @Model.Author</p>
            <p><strong>ISBN:</strong> @Model.ISBN</p>
            <p><strong>قیمت:</strong> @Model.Price.ToString("N0") تومان</p>
            <p><strong>دسته‌بندی:</strong> @Model.Category?.Name</p>
        </div>
    </div>

    <hr />

    <h4>نظرات کاربران</h4>
    @if (Model.Reviews != null && Model.Reviews.Any())
    {
        foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
        {
            <div class="border p-2 mb-2 rounded">
                <strong>@review.UserName</strong>
                <span class="text-muted">(@review.CreatedAt.ToString("yyyy/MM/dd HH:mm"))</span>
                <p>@review.Comment</p>
            </div>
        }
    }
    else
    {
        <p>هنوز نظری ثبت نشده است.</p>
    }

    <hr />
    <h5>ثبت نظر جدید</h5>
    <form asp-action="AddReview" method="post">
        <input type="hidden" name="bookId" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">نام شما</label>
            <input type="text" name="userName" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">نظر شما</label>
            <textarea name="comment" class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">ارسال نظر</button>
    </form>
</div>
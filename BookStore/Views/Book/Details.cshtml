@model BookStore.Models.Book
@{
    ViewData["Title"] = "جزئیات کتاب";
}

<div class="container my-4">
    <!-- کارت اطلاعات کتاب -->
    <div class="card border-0 shadow-sm p-4 mb-4">
        <div class="d-flex align-items-center mb-4 border-bottom pb-3">
            <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center me-3" style="width:50px; height:50px;">
                <i class="fa-solid fa-book fa-lg"></i>
            </div>
            <h2 class="fw-bold mb-0 text-primary">@Model.Title</h2>
        </div>

        <dl class="row mb-0">
            <dt class="col-sm-3 fw-semibold text-muted">
                نویسنده
            </dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3 fw-semibold text-muted">
                دسته‌بندی
            </dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3 fw-semibold text-muted">
                قیمت
            </dt>
            <dd class="col-sm-9 text-success fw-bold">@Model.Price.ToString("N0") تومان</dd>

            <dt class="col-sm-3 fw-semibold text-muted">
                توضیحات
            </dt>
        </dl>
    </div>

    <!-- پیام موفقیت یا خطا -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">@TempData["error"]</div>
    }

    <!-- لیست نظرات -->
    <div class="card border-0 shadow-sm p-4 mb-4">
        <h4 class="fw-bold text-secondary mb-3">
            <i class="fa fa-comments me-1"></i> نظرات کاربران
        </h4>

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            <ul class="list-group list-group-flush">
                @foreach (var review in Model.Reviews.OrderByDescending(r => r.Id))
                {
                    <li class="list-group-item">
                        <strong>@review.UserName</strong>
                        <p class="mb-1">@review.Comment</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">هنوز نظری ثبت نشده است.</p>
        }
    </div>

    <!-- فرم ارسال نظر -->
    <div class="card border-0 shadow-sm p-4">
        <h4 class="fw-bold text-primary mb-3">
            <i class="fa fa-pen me-1"></i> ارسال نظر
        </h4>

        <form asp-action="AddReview" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="bookId" value="@Model.Id" />

            <div class="mb-3">
                <label for="comment" class="form-label">نظر شما</label>
                <textarea name="comment" id="comment" rows="3" class="form-control"></textarea>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="fa fa-paper-plane me-1"></i> ثبت نظر
            </button>
        </form>

    </div>
</div>

@model IEnumerable<BookStore.Models.Book>

@{
    ViewData["Title"] = "لیست کتاب‌ها";
}

<h2 class="mb-4">📚 لیست کتاب‌ها</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@(string.IsNullOrEmpty(item.ImageUrl) 
                              ? Url.Content("~/images/books/no-image.png") 
                              : Url.Content(item.ImageUrl))"
                     class="card-img-top" alt="@item.Title" style="height:250px; object-fit:cover;" />

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text text-muted">نویسنده: @item.Author</p>
                    <p class="fw-bold text-success">@item.Price.ToString("N0") تومان</p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="fa fa-edit"></i> ویرایش
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                            <i class="fa fa-trash"></i> حذف
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">جزئیات</a>


                    </div>
                </div>
            </div>
        </div>
    }
</div>

<a asp-action="Create" class="btn btn-primary mt-3">
    <i class="fa fa-plus"></i> افزودن کتاب جدید
</a>
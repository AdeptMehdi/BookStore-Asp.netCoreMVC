@model IEnumerable<BookStore.Models.Book>
@{
    ViewData["Title"] = "لیست کتاب‌ها";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">
            📚 لیست کتاب‌ها
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fa fa-plus me-1"></i> افزودن کتاب جدید
        </a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <div class="card h-100 shadow-sm border-0 product-card">
                    <img src="@(string.IsNullOrEmpty(item.ImageUrl)
                                                           ? Url.Content("~/images/books/no-image.png")
                                                           : Url.Content(item.ImageUrl))"
                     class="card-img-top product-img" alt="@item.Title" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title text-truncate" title="@item.Title">@item.Title</h5>
                        <p class="card-text text-muted small mb-1">✍ @item.Author</p>
                        <p class="fw-bold text-success mb-3">@item.Price.ToString("N0") تومان</p>

                        <div class="mt-auto d-flex flex-wrap gap-1">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm flex-fill">
                                <i class="fa fa-edit"></i> ویرایش
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm flex-fill">
                                <i class="fa fa-trash"></i> حذف
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm flex-fill">
                                <i class="fa fa-info-circle"></i> جزئیات
                            </a>
                        </div>
                    </div>
                </div>
            </div>
                }
    </div>
</div>

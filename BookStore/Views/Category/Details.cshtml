@model BookStore.Models.Category
@{
    ViewData["Title"] = "جزئیات دسته‌بندی";
}

<div class="container my-4">
    <div class="card border-0 shadow-sm p-4" style="max-width: 600px; margin: auto;">
        <h2 class="fw-bold text-primary mb-4">
            <i class="fa-solid fa-layer-group me-2"></i> جزئیات دسته‌بندی
        </h2>

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold text-muted">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="col-sm-4 fw-semibold text-muted">
                @Html.DisplayNameFor(model => model.DisplayOrder)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.DisplayOrder)
            </dd>
        </dl>

        <div class="d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                <i class="fa fa-edit me-1"></i> ویرایش
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> بازگشت
            </a>
        </div>
    </div>
</div>
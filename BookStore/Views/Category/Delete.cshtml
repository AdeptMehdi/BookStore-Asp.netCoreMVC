@model BookStore.Models.Category
@{
    ViewData["Title"] = "حذف دسته‌بندی";
}

<div class="container my-4">
    <div class="card border-0 shadow-sm p-4" style="max-width: 650px; margin: auto;">
        <h2 class="fw-bold text-danger mb-3">
            <i class="fa-solid fa-triangle-exclamation me-2"></i> حذف دسته‌بندی
        </h2>
        <p class="text-muted">آیا مطمئن هستید که می‌خواهید این دسته‌بندی را حذف کنید؟ این عملیات غیرقابل بازگشت است.</p>

        <dl class="row mb-4">
            <dt class="col-sm-4 fw-semibold text-muted">
                <i class="fa fa-tag me-1 text-primary"></i> @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-8">
                <span class="badge bg-light text-dark fs-6 px-3 py-2">@Html.DisplayFor(model => model.Name)</span>
            </dd>

            <dt class="col-sm-4 fw-semibold text-muted">
                <i class="fa fa-sort-numeric-up me-1 text-primary"></i> @Html.DisplayNameFor(model => model.DisplayOrder)
            </dt>
            <dd class="col-sm-8">
                <span class="badge bg-light text-dark fs-6 px-3 py-2">@Html.DisplayFor(model => model.DisplayOrder)</span>
            </dd>
        </dl>

        <form asp-action="Delete" method="post" class="d-flex gap-2">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash me-1"></i> حذف
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fa fa-arrow-left me-1"></i> بازگشت
            </a>
        </form>
    </div>
</div>
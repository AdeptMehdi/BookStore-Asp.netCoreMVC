@* Views/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookStore</title>

    <!-- Bootstrap RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.rtl.min.css" />

    <!-- Font Vazirmatn -->
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookStore.styles.css" asp-append-version="true" />
</head>
@{
        var isAuthPage = ViewBag.IsAuthPage as bool? ?? false;
        var successMsg = TempData["Success"] as string;
        var errorMsg = TempData["Error"] as string;
}
<body class="d-flex flex-column min-vh-100 @(isAuthPage ? "auth-page" : "")"
      data-success="@successMsg" data-error="@errorMsg">

    <!-- هدر -->
    <header>
        <nav class="navbar navbar-expand-lg main-navbar shadow-sm">
            <div class="container">
                <!-- برند -->
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-book-open-reader me-2"></i> BookStore
                </a>

                <!-- دکمه موبایل -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- منو -->
                <div class="collapse navbar-collapse" id="mainNavbar">
                    <!-- منوی سمت راست -->
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-house"></i> خانه</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Category" asp-action="Index"><i class="fa-solid fa-list"></i> دسته‌بندی‌ها</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Book" asp-action="Index"><i class="fa-solid fa-book"></i> کتاب‌ها</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Company" asp-action="Index"><i class="fa-solid fa-building"></i> ناشران</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item"><a class="nav-link text-warning" asp-controller="Admin" asp-action="Index"><i class="fa-solid fa-screwdriver-wrench"></i> مدیریت</a></li>
                        }
                    </ul>

                    <!-- فرم جستجو -->
                    <form asp-controller="Books" asp-action="Search" method="get" class="d-flex me-3 search-form">
                        <input type="text" name="query" class="form-control" placeholder="جستجوی کتاب..." />
                        <button type="submit" class="btn btn-search"><i class="fa-solid fa-search"></i></button>
                    </form>

                    <!-- منوی سمت چپ -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="fa-solid fa-cart-shopping"></i> سبد خرید
                                @await Component.InvokeAsync("CartCount")
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Profile" asp-action="Index"><i class="fa-solid fa-user"></i> پروفایل</a></li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link"><i class="fa-solid fa-right-from-bracket"></i> خروج</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fa-solid fa-right-to-bracket"></i> ورود</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fa-solid fa-user-plus"></i> ثبت‌نام</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="flex-grow-1">
        @RenderBody()
    </main>
    <!-- فوتر -->
    @await Html.PartialAsync("_Footer")


    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

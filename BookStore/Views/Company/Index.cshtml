@model IEnumerable<BookStore.Models.Company>
@{
    ViewData["Title"] = "مدیریت شرکت‌ها";
}

<div class="container my-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-building me-2"></i> مدیریت شرکت‌ها
    </h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa fa-plus me-1"></i> افزودن شرکت جدید
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.City)</th>
                            <th>@Html.DisplayNameFor(model => model.State)</th>
                            <th>@Html.DisplayNameFor(model => model.PostalCode)</th>
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th class="text-center">عملیات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Address</td>
                                <td>@item.City</td>
                                <td>@item.State</td>
                                <td>@item.PostalCode</td>
                                <td>@item.PhoneNumber</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                        <i class="fa fa-edit"></i> ویرایش
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                                        <i class="fa fa-eye"></i> جزئیات
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i> حذف
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

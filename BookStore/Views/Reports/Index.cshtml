<div class="container my-4">
    <h2 class="fw-bold text-primary mb-4">
        <i class="fa-solid fa-chart-line me-2"></i> گزارش فروش
    </h2>

    <!-- کارت‌های آمار -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:50px; height:50px;">
                        <i class="fa-solid fa-calendar-day fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">فروش امروز</h6>
                        <h4 class="mb-0 text-primary">@ViewBag.TodaySales.ToString("N0") <small>تومان</small></h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body d-flex align-items-center">
                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width:50px; height:50px;">
                        <i class="fa-solid fa-calendar-alt fa-lg"></i>
                    </div>
                    <div>
                        <h6 class="text-muted mb-1">فروش این ماه</h6>
                        <h4 class="mb-0 text-success">@ViewBag.MonthlySales.ToString("N0") <small>تومان</small></h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- جدول پرفروش‌ها -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <h5 class="fw-bold text-secondary mb-3">
                <i class="fa-solid fa-star me-2 text-warning"></i> ۵ کتاب پرفروش
            </h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>عنوان کتاب</th>
                            <th class="text-center">تعداد فروش</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var book in ViewBag.TopBooks)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td class="text-center fw-bold">@book.Count</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "داشبورد ادمین";
}

<div class="container mt-4">
    <h1 class="mb-4">داشبورد مدیریت</h1>
    <p>خوش آمدید، @User.Identity.Name</p>

    <div class="row text-center">
        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body">
                    <h5 class="card-title">📚 کتاب‌ها</h5>
                    <h2>@ViewBag.TotalBooks</h2>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary btn-sm">مدیریت</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-success">
                <div class="card-body">
                    <h5 class="card-title">📂 دسته‌بندی‌ها</h5>
                    <h2>@ViewBag.TotalCategories</h2>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success btn-sm">مدیریت</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body">
                    <h5 class="card-title">💬 نظرات</h5>
                    <h2>@ViewBag.TotalReviews</h2>
                    <a asp-controller="Review" asp-action="Index" class="btn btn-outline-warning btn-sm">مدیریت</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card shadow-sm border-danger">
                <div class="card-body">
                    <h5 class="card-title">⏳ در انتظار تأیید</h5>
                    <h2>@ViewBag.PendingReviews</h2>
                    <a asp-controller="Review" asp-action="Index" class="btn btn-outline-danger btn-sm">بررسی</a>
                </div>
            </div>
        </div>
    </div>
</div>
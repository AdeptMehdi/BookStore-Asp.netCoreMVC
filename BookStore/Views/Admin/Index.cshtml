@{
    ViewData["Title"] = "داشبورد مدیریت";
}

<div class="container my-4">
    <h1 class="fw-bold text-primary mb-2">
        <i class="fa-solid fa-gauge-high me-2"></i> داشبورد مدیریت
    </h1>
    <p class="text-muted mb-4">خوش آمدید، <strong>@User.Identity.Name</strong></p>

    <div class="row g-3 text-center">
        <!-- کتاب‌ها -->
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:60px; height:60px;">
                        <i class="fa-solid fa-book fa-lg"></i>
                    </div>
                    <h6 class="text-muted">کتاب‌ها</h6>
                    <h2 class="fw-bold">@ViewBag.TotalBooks</h2>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-outline-primary btn-sm mt-2">مدیریت</a>
                </div>
            </div>
        </div>

        <!-- دسته‌بندی‌ها -->
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:60px; height:60px;">
                        <i class="fa-solid fa-folder-open fa-lg"></i>
                    </div>
                    <h6 class="text-muted">دسته‌بندی‌ها</h6>
                    <h2 class="fw-bold">@ViewBag.TotalCategories</h2>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-outline-success btn-sm mt-2">مدیریت</a>
                </div>
            </div>
        </div>

        <!-- نظرات -->
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:60px; height:60px;">
                        <i class="fa-solid fa-comments fa-lg"></i>
                    </div>
                    <h6 class="text-muted">نظرات</h6>
                    <h2 class="fw-bold">@ViewBag.TotalReviews</h2>
                    <a asp-controller="Review" asp-action="Index" class="btn btn-outline-warning btn-sm mt-2">مدیریت</a>
                </div>
            </div>
        </div>

        <!-- در انتظار تأیید -->
        <div class="col-md-3 col-sm-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width:60px; height:60px;">
                        <i class="fa-solid fa-hourglass-half fa-lg"></i>
                    </div>
                    <h6 class="text-muted">در انتظار تأیید</h6>
                    <h2 class="fw-bold">@ViewBag.PendingReviews</h2>
                    <a asp-controller="Review" asp-action="Index" class="btn btn-outline-danger btn-sm mt-2">بررسی</a>
                </div>
            </div>
        </div>
    </div>
</div>

@{
    ViewData["Title"] = "تغییر رمز عبور";
}

<div class="container my-4">
    <div class="card border-0 shadow-sm p-4" style="max-width: 500px; margin: auto;">
        <h2 class="fw-bold text-primary mb-4">
            <i class="fa-solid fa-key me-2"></i> تغییر رمز عبور
        </h2>

        <form asp-action="ChangePassword" method="post">
            @Html.AntiForgeryToken()

            <!-- رمز عبور فعلی -->
            <div class="mb-3">
                <label for="oldPassword" class="form-label fw-semibold">رمز عبور فعلی</label>
                <input type="password" name="oldPassword" id="oldPassword" class="form-control" placeholder="رمز عبور فعلی را وارد کنید" required />
            </div>

            <!-- رمز عبور جدید -->
            <div class="mb-3">
                <label for="newPassword" class="form-label fw-semibold">رمز عبور جدید</label>
                <input type="password" name="newPassword" id="newPassword" class="form-control" placeholder="رمز عبور جدید را وارد کنید" required />
            </div>

            <!-- تکرار رمز عبور جدید -->
            <div class="mb-3">
                <label for="confirmPassword" class="form-label fw-semibold">تکرار رمز عبور جدید</label>
                <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="رمز عبور جدید را دوباره وارد کنید" required />
            </div>

            <div class="mt-4 d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="fa fa-save me-1"></i> ذخیره تغییرات
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fa fa-arrow-left me-1"></i> بازگشت
                </a>
            </div>
        </form>
    </div>
</div>
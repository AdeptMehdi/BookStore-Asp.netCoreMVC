@model BookStore.Models.Order

@{
    Layout = null; // برای چاپ بدون قالب سایت
}

<!DOCTYPE html>
<html lang="fa">
<head>
    <meta charset="utf-8" />
    <title>فاکتور سفارش</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Tahoma';
            margin: 40px;
        }

        .invoice-box {
            border: 1px solid #ccc;
            padding: 30px;
        }

        .logo {
            font-size: 24px;
            font-weight: bold;
            color: #2c3e50;
        }

        .print-btn {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="invoice-box">
        <div class="d-flex justify-content-between mb-4">
            <div class="logo">📚 BookStore</div>
            <div>
                <strong>تاریخ:</strong> @Model.OrderDate.ToString("yyyy/MM/dd HH:mm")<br />
                <strong>شماره سفارش:</strong> @Model.Id
            </div>
        </div>

        <h5 class="mb-3">جزئیات سفارش</h5>
        <table class="table table-bordered">
            <thead class="table-light">
                <tr>
                    <th>عنوان کتاب</th>
                    <th>تعداد</th>
                    <th>قیمت واحد</th>
                    <th>قیمت کل</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Book.Title</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("N0") تومان</td>
                        <td>@(item.UnitPrice* item.Quantity).ToString("N0") تومان</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-4">
            <h5>💰 مجموع کل: @Model.TotalAmount.ToString("N0") تومان</h5>
        </div>

        <div class="text-center print-btn">
            <button onclick="window.print()" class="btn btn-outline-primary">🖨️ چاپ فاکتور</button>
        </div>
    </div>
</body>
</html>

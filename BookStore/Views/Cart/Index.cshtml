@model List<BookStore.Models.CartItem>

<h3 class="mb-4">🛒 سبد خرید شما</h3>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        سبد خرید شما خالی است.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
        <tr>
            <th>عنوان</th>
            <th>تعداد</th>
            <th>قیمت واحد</th>
            <th>قیمت کل</th>
            <th>عملیات</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Quantity</td>
                <td>@item.Book.Price.ToString("N0") تومان</td>
                <td>@(item.Book.Price * item.Quantity).ToString("N0") تومان</td>
                <td>
                    <a asp-action="RemoveFromCart" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        ❌ حذف
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <h5 class="fw-bold">
            مجموع کل: @Model.Sum(i => i.Book.Price * i.Quantity).ToString("N0") تومان
        </h5>

        <form asp-action="Checkout" method="post">
            <button type="submit" class="btn btn-success btn-lg">
                💳 پرداخت
            </button>
        </form>
    </div>
}